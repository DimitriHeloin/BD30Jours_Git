<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="180dp"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/background_top">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:id="@+id/bouton_menu_1"
                android:background="@drawable/item1" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:id="@+id/bouton_menu_2"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/item2" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:id="@+id/bouton_menu_3"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/item3" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:id="@+id/bouton_menu_4"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/item4" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>